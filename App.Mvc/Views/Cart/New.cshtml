
@{
    ViewData["Title"] = "New Cart";
}

<h2>New Cart</h2>

<h3>Are you sure you want to create a new cart?</h3>

<form asp-controller="Cart" asp-action="New" method="post">
    <div class="form-group">
        <label for="cartName">Cart Name:</label>
        <input type="text" id="cartName" name="cartName" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Create New Cart</button>
</form>

<a asp-action="List" class="btn btn-secondary mt-2">Back To List</a>
